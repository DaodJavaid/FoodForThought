@section Scripts {
    <script>
        $(document).ready(function () {
            $(".header").hide();
            $("#footer").hide();
        });
    </script>
}

<!-- Begin page -->
<div id="layout-wrapper">

    @Html.Partial("_UserVerticalMenu")

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Update User</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Food For Thought</a></li>
                                    <li class="breadcrumb-item active">Update User</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
                <!-- Search Product -->

                <!-- Update Form -->
                <div class="row">

                    <div class="col-lg-12">
                        <div class="card card-animate" id="user_background">
                            <div class="card-body">
                                <h4 class="card-title d-inline-block">Update User</h4>

                                <div id="morris-line-example" class="morris-chart" style="height: 320px;">

                                    <form method="post" action="Search" id="Register_form" enctype="multipart/form-data">
                                        <h1>Enter Old User Email</h1>
                                        <div class="form-group">
                                            <input type="email" name="email_old" class="form-control" id="inputname1" placeholder="Enter User Old Email" />
                                            <button type="submit" class="btn btn-primary">Get User Data</button>
                                        </div>
                                    </form>


                                    <form method="post" action="Update_user" id="Register_form" enctype="multipart/form-data">
                                        <h1>Enter Updated Data</h1>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">First Name</label>
                                                <input type="text" name="username" class="form-control" id="inputfirstname" placeholder="First Name" value="@TempData["UserName"]">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Email</label>
                                                <input type="email" name="email_old" class="form-control" id="inputEmail4" placeholder="Email" value="@TempData["UserEmail"]" readonly>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Password</label>
                                                <input type="password" name="password" class="form-control" id="inputPassword4" placeholder="Password">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Confirm Password</label>
                                                <input type="password" name="confirm_password" class="form-control" id="inputPassword4" placeholder="Password">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Address</label>
                                            <textarea type="text" name="address" class="form-control" id="inputAddress" placeholder="1234 Main St">@TempData["UserAddress"]</textarea>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-5">
                                                <label for="inputCountry">Country</label>
                                                <input type="text" name="country" class="form-control" id="inputCountry" value="@TempData["UserCountry"]">
                                            </div>

                                            <div class="form-group col-md-5">
                                                <label for="inputCity">City</label>
                                                <input type="text" name="city" class="form-control" id="inputCity" value="@TempData["UserCity"]">
                                            </div>

                                            <div class="form-group col-md-1">
                                                <label for="inputZip">Zip</label>
                                                <input type="text" name="zip" class="form-control" id="inputZip" value="@TempData["UserZip"]">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Select Gender</label>
                                            <select name="gender" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                                <option selected>Male</option>
                                                <option value="1">Female</option>
                                            </select>
                                        </div>

                                        @*  <div class="form-group">
                                        <label for="exampleFormControlFile1">Choose Profile Picture</label>
                                        <input type="file" class="form-control-file" id="exampleFormControlFile1">
                                        </div>
                                        *@

                                        <button type="submit" class="btn btn-primary">Update User</button>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                    <!-- end row-->

                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>

