@section Scripts {
    <script>
        $(document).ready(function () {
            $(".header").hide();
        });
    </script>
}

<!-- Begin page -->
<div id="layout-wrapper">

    @Html.Partial("_VerticalMenu")

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Add Product</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Food For Thought</a></li>
                                    <li class="breadcrumb-item active">Add Product</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">

                    <div class="col-lg-12">
                        <div class="card card-animate">
                            <div class="card-body">
                                <h4 class="card-title d-inline-block">Adding Product</h4>

                                <div id="morris-line-example" class="morris-chart" style="height: 320px;">

                                    <form method="post" action="AddProduct" id="Register_form" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <input type="text" name="product_title" class="form-control" id="inputname1" placeholder="Enter Product Name" />
                                        </div>
                                        <div class="form-group">
                                            <textarea type="text" name="product_desription" class="form-control" id="inputemail1" placeholder="Enter Product Description"></textarea>
                                        </div>
                                        <label for="formFileSm" class="form-label">Upload Product Picture</label>

                                        <input class="form-control form-control-sm" name="product_img_NotMapped" id="formFileSm" type="file" />

                                        <button type="submit" class="btn btn-primary" id="Register_button" style="margin-top: 15px;">Add Product</button>

                                    </form>
                                </div>


                            </div>
                        </div>
                    </div> <!-- end col -->
                    <!-- end row-->



                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>

