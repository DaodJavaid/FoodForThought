                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sign out"></a>
                    </div>
                   
                    
                    @* Register Icon and Pages 
                    <i class="fas fa-user-alt"> Account</i>

                    <div class="dropdown-menu">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                    </div>*@
                </ul>
                
                <ul class="navbar-nav ml-auto mb-2">
                    
                    <div class="sidenav" id="Open_side_bar_menu">
                        <i class="fa fa-close" onclick="ClosesideBar()"></i>

                        <div class="container" id="side_bar_body">
                            <h2 id="side_bar_heading">Food For Thought</h2>
                            <p id="side_bar_subheading">
