
@{

    //  facial expression in to one of four categories(0=Angry, 1=Fear, 2=Happy, 3=Sad).
    int emotion_lable = ViewBag.PredictedLabelIndex;
    int emotion_number = 4;
    var error = "";
    if (emotion_lable == 0)
    {
        emotion_number = 0;
    }
    else if (emotion_lable == 1)
    {
        emotion_number = 1;
    }
    else if (emotion_lable == 2)
    {
        emotion_number = 2;
    }
    else if (emotion_lable == 3)
    {
        emotion_number = 3;
    }
    else
    {
        error = "Something Wrong on the Emotion";
    }
}

@model IEnumerable<FoodForThrought.Models.QuestionnaireModel>

<h1>@error</h1>
<div class="container" style="margin-top: 30px; margin-bottom: 30px;">
    <div class="row">

        <h3 style="text-align: center">It look Your Emotion Rght Now Is @ViewBag.PredictedLabel</h3>
    </div>
</div>

<div class="container">
    <h3 class="text-center">Some @ViewBag.PredictedLabel Emotion Related Question For Predicting Food Categories</h3>
    <hr>
    <form >
       @foreach (var emotion_questions in Model)
       {
          if (emotion_number == Convert.ToInt32(emotion_questions.select_emotion))
          {     
            <div class="form-group">
                <p> @Html.DisplayFor(modelItem => emotion_questions.emotion_questtion)</p>
               <div class="form-row">
                  <div class="form-check col-3">
                    <input class="form-check-input" type="radio" name="question1" id="question1_1" value="option1">
                        <label class="form-check-label" for="question1_1">@Html.DisplayFor(modelItem => emotion_questions.first_option)</label>
                  </div>
                  <div class="form-check col-3">
                    <input class="form-check-input" type="radio" name="question1" id="question1_2" value="option2">
                        <label class="form-check-label" for="question1_2">@Html.DisplayFor(modelItem => emotion_questions.second_option)</label>
                  </div>
                  <div class="form-check col-3">
                    <input class="form-check-input" type="radio" name="question1" id="question1_3" value="option3">
                        <label class="form-check-label" for="question1_3">@Html.DisplayFor(modelItem => emotion_questions.third_option)</label>
                  </div>
                  <div class="form-check col-3">
                    <input class="form-check-input" type="radio" name="question1" id="question1_3" value="option3">
                        <label class="form-check-label" for="question1_3">@Html.DisplayFor(modelItem => emotion_questions.forth_option)</label>
                  </div>
               </div>
            </div>
          }
       }

        <button type="submit" class="btn btn-primary" id="Register_button">Submit</button>
    </form>
</div>