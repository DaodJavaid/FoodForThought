@model IEnumerable<FoodForThrought.Models.QuestionnaireModel>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".header").hide();
            $("#footer").hide();
        });
    </script>
}

<!-- Begin page -->
<div id="layout-wrapper">

    @Html.Partial("_VerticalMenu")
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Search And Update Question</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Food For Thought</a></li>
                                    <li class="breadcrumb-item active">Search And Update Question</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->
                <!-- Search Product -->

                <div class="row">

                    <div class="col-lg-12">
                        <div class="card card-animate">
                            <div class="card-body">

                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Search Question</h4>

                                    <div class="page-title-right">

                                        <form method="post" action="SearchProduct" class="form-inline">
                                            <div class="form-group">
                                                <input type="text" name="product_title" class="form-control" id="search_product" placeholder="Enter Product Name Or Id" />
                                            </div>
                                            <button type="submit" id="Search_button_product" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                                <div id="morris-line-example" class="morris-chart" style="height: 320px;">

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Question Id</th>
                                                        <th>Question</th>
                                                        <th>Option1</th>
                                                        <th>Option2</th>
                                                        <th>Option3</th>
                                                        <th>Option4</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                               @foreach (var questions in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.emotion_questtion)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.first_option)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.second_option)
                                                            </td>

                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.third_option)
                                                            </td>

                                                            <td>
                                                                @Html.DisplayFor(modelItem => questions.forth_option)
                                                            </td>

                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                    <!-- end row-->

                </div> <!-- container-fluid -->
                <!-- Update Form -->
                <div class="row">

                    <div class="col-lg-12">
                        <div class="card card-animate">
                            <div class="card-body">
                                <h4 class="card-title d-inline-block">Update Question</h4>

                                <div id="morris-line-example" class="morris-chart" style="height: 320px;">

                                    <form method="post" action="UpdateQuestion" id="Register_form" enctype="multipart/form-data">
                                        <h1>Enter Old Question ID</h1>
                                        <div class="form-group">
                                            <input type="number" name="old_id" class="form-control" id="inputname1" placeholder="Enter Old Question ID" />
                                        </div>
                                        <h1>Enter Updated Data</h1>

                                        <div class="form-group">
                                            <input type="text" name="emotion_questtion" class="form-control" id="inputname1" placeholder="Enter Question" />
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <input type="text" name="first_option" class="form-control" id="inputname1" placeholder="Enter First Option" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <input type="text" name="second_option" class="form-control" id="inputname2" placeholder="Enter Second Option" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <input type="text" name="third_option" class="form-control" id="inputname3" placeholder="Enter Third Option" />
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <input type="text" name="forth_option" class="form-control" id="inputname4" placeholder="Enter Forth Option" />
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary" id="Register_button" style="margin-top: 15px;">Add Question</button>


                                    </form>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end col -->
                    <!-- end row-->

                </div> <!-- container-fluid -->
            </div>
            <!-- End Page-content -->

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>
</div>