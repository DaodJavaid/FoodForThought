@model IEnumerable<FoodForThrought.Models.AdminRegister>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".header").hide();
            $("#footer").hide();
        });
    </script>
}

<div class="container-fluid" id="main_heading_deshboard">
<div id="layout-wrapper">

        @Html.Partial("_VerticalMenu")
   
    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Dashboard</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Food For Thought</a></li>
                                    <li class="breadcrumb-item active">Dashboard</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-xl-4 col-md-6">
                        <div class="card card-animate">
                            <div class="card-body">
                                <div class="avatar-sm float-right">
                                    <span class="avatar-title bg-soft-primary rounded-circle">
                                        <i class="fas fa-user m-0 h3 text-primary"></i>
                                    </span>
                                </div>
                                <h6 class="text-muted text-uppercase mt-0">Registered Users</h6>
                                    <h3 class="my-3">@ViewBag.Usercount</h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-4 col-md-6">
                        <div class="card card-animate">
                            <div class="card-body">
                                <div class="avatar-sm float-right">
                                    <span class="avatar-title bg-soft-primary rounded-circle">
                                            <i class="fas fa-hamburger m-0 h3 text-primary"></i>
                                    </span>
                                </div>
                                <h6 class="text-muted text-uppercase mt-0">Total Product</h6>
                                    <h3 class="my-3">@ViewBag.Productcount</h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-4 col-md-6">
                        <div class="card card-animate">
                            <div class="card-body">
                                <div class="avatar-sm float-right">
                                    <span class="avatar-title bg-soft-primary rounded-circle">
                                        <i class="fas fa-question m-0 h3 text-primary"></i>
                                    </span>
                                </div>
                                <h6 class="text-muted text-uppercase mt-0">Total Question</h6>
                                <h3 class="my-3">9</h3>
                            </div>
                        </div>
                    </div>
                </div>
               

                <div class="row">
                    <div class="col-lg-4">
                        <div class="card card-animate">
                            <div class="card-body">
                                
                                <h4 class="card-title d-inline-block mb-3">Team Members </h4>

                                <div data-simplebar style="max-height: 380px;">
                                    <a href="#" class="d-flex align-items-center border-bottom py-3">
                                        <div class="mr-3">
                                            <img src="assets/images/users/avatar-2.jpg" class="rounded-circle avatar-sm" alt="user">
                                        </div>
                                        <div class="w-100">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">Daod Javaid</h6>
                                                <p class="text-muted font-size-11 mb-0">12.30 PM</p>
                                            </div>
                                            <p class="text-muted font-size-13 mb-0">Web Designer & Developer</p>
                                        </div>
                                    </a>

                                    <a href="#" class="d-flex align-items-center border-bottom py-3">
                                        <div class="mr-3">
                                            <img src="assets/images/users/avatar-3.jpg" class="rounded-circle avatar-sm" alt="user">
                                        </div>
                                        <div class="w-100">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">Ziad Tariq</h6>
                                                <p class="text-muted font-size-11 mb-0">09.30 PM</p>
                                            </div>
                                            <p class="text-muted font-size-13 mb-0">Web Designer</p>
                                        </div>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div> <!-- end col -->


                    <div class="col-lg-8">
                        <div class="card card-animate">
                            <div class="card-body">
                                
                                <h4 class="card-title d-inline-block">All Projects</h4>

                                <div class="table-responsive">
                                    <table class="table table-borderless table-hover mb-0">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>No</th>
                                                <th>Client Name</th>
                                                <th>Gender</th>
                                                <th>Email</th>
                                                <th>Country</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                              @if (Model != null)
                                              {
                                                    @foreach (var users in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => users.Id)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => users.username)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => users.gender)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => users.email)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => users.country)
                                                            </td>
                                                         </tr>
                                                    }
                                             }

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div> <!-- end col -->

                </div>
                <!-- end row-->

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->
    </div>
    <!-- end main content-->

</div>
</div>
<!-- END layout-wrapper -->
<!-- Overlay-->
<div class="menu-overlay"></div>