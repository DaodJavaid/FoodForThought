@model AdminRegister

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".header").hide();
            $("#footer").hide();
        });
    </script>
}



<div class="container" id="Register_main_body">
    <div class="row">
        
        <div class="col-md-6" id="Register_page_section_2">
            <div class="row">
                <h2>Create an Admin Account</h2>
            </div>
            <div class="row">
                <h6>Already have an account? <a asp-controller="Admin" asp-action="AdminLogin"> Login </a> </h6>
            </div>
            <div class="row">
                <form method="post" action="Register_Admin" id="Register_form">
                    <div class="form-group">
                        <input type="text" name="admin_username" class="form-control" id="inputname1" placeholder="Enter Your Username" />
                    </div>
                    <div class="form-group">
                        <input type="email" name="admin_email" class="form-control" id="inputemail1" placeholder="Enter Your Email" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="admin_password" class="form-control" id="inputpassword1" placeholder="Enter Your Password" />
                    </div> 
                    <div class="form-group">
                        <input type="password" name="admin_confirm_password" class="form-control" id="inputpassword2" placeholder="Enter Confirm Password" />
                    </div>
                    <button type="submit" class="btn btn-primary" id="Register_button">Submit & Register</button>

                </form>
            </div>
        </div>

        <div class="col-md-6">
            <img src="/images/Login/login.jpg" alt="Register Page Image" id="Register_page" />
        </div>

    </div>
</div>